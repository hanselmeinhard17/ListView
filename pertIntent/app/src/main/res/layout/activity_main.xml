<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnExplisit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buka Explisit Intent" />
    
    <EditText
        android:id="@+id/edtExplisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukkan data yang ingin dikirim" />

    <Button
        android:id="@+id/btnExplisit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Text ke Intent 3" />
    
    <Button
        android:id="@+id/btnExplisit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim data (Parcelable) ke Intent 4" />

    <Button
        android:id="@+id/btnExplisit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOPIK 4" />
</LinearLayout>